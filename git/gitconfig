[user]
	name = Bartlomiej Kozal
	email = bartlomiejkozal@gmail.com
[core]
	editor = mate -w
	excludesfile = ~/.gitignore
[alias]
	# Commits summary
	who = shortlog -s --
	# Stats
	stat = diff --stat -r
	# Show aliases
	aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
[github]
	user = bkozal
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
