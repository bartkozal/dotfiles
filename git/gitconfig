[user]
  name = Bartlomiej Kozal
  email = bartlomiejkozal@gmail.com
[core]
  editor = mate -w
  excludesfile = ~/.gitignore
[branch "master"]
  remote = origin
  merge = refs/heads/master
  rebase = true
[alias]
  who = shortlog -s --
  stat = diff --stat -r
  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
[github]
  user = bkozal
[merge]
  tool = opendiff
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
